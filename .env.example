# Backend API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_API_TOKEN=your_api_token_here

# Optional: Enable debug logging
EXPO_PUBLIC_DEBUG=false

# Audio polling configuration
# Maximum milliseconds to wait for generated audio before timing out
EXPO_PUBLIC_AUDIO_TIMEOUT_MS=90000
# Poll interval in milliseconds for checking audio readiness
EXPO_PUBLIC_AUDIO_POLL_INTERVAL_MS=2000